<div class="col-md mx-auto">
  <div class="card">
    <div class="card-header">
      <h4>Editor de Series</h4>
    </div>
    <div class="card-body">
      <form action="/series/edit/{{series._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID Serie</label>
            <div class="col-sm-10">
              <input type="numeric" name="idserie" class="form-control" value="{{series.idserie}}" disabled>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID Entidad</label>
            <div class="col-sm-10">
              <input type="numeric" name="identidad" class="form-control" value="{{series.identidad}}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID Tipo Documento</label>
            <div class="col-sm-10">
              <input type="numeric" name="idtipo_documento" class="form-control" value="{{series.idtipo_documento}}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Descripcion</label>
            <div class="col-sm-10">
              <input type="text" name="descripcion" class="form-control" value="{{series.descripcion}}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Correlativo</label>
            <div class="col-sm-10">
              <input type="numeric" name="correlativo" class="form-control" value="{{series.correlativo}}">
            </div>
          </div>

          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>