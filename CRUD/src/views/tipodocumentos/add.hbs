    <div class="card-body">
      <form action="/tipodocumentos/create/" method="POST">
        
        <div class="form-group">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input type="numeric" name="idtipo_documento" class="form-control" value="{{tipo_documento.idtipo_documento}}">
            </div>
          </div>      
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Codigo</label>
