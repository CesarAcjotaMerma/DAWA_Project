<div class="col-md mx-auto">
  <div class="card">
    <div class="card-header">
      <h4>Editor de Tipo de Documento</h4>
    </div>
    <div class="card-body">
      <form action="/tipodocumentos/edit/{{tipo_documento._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input type="numeric" name="id" class="form-control" value="{{tipo_documento.idtipo_documento}}" disabled>
            </div>
          </div>      
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Codigo</label>
            <div class="col-sm-10">
              <input type="text" name="codigo" class="form-control" value="{{tipo_documento.codigo}}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Descripcion</label>
            <div class="col-sm-10">
              <input type="text" name="descripcion" class="form-control" value="{{tipo_documento.descripcion}}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Abreviacion</label>
            <div class="col-sm-10">
              <input type="text" name="abreviacion" class="form-control" value="{{tipo_documento.abreviacion}}">
            </div>
          </div>

          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
          
        </div>
      </form>
    </div>
  </div>
</div>