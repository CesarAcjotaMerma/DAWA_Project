        <form action="/detalles/delete/{{_id}}?_method=DELETE" method="POST">
						<button class="btn btn-danger" type="submit" name="delete" value='Delete' onClick="return confirm('Â¿Deseas Eliminar el Registro?')"><i class="far fa-trash-alt fa-xs"></i></button>
